@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Clients</h1>
  <hr/>

  @if (@Model.Count == 0)
  {
    <h3>No clients have been added</h3>
  }
  @foreach (var client in Model)
  {
    <ul>
      <li><a href="/clients/@client.GetId()">@client.GetClientName()</a> |
        <a href="/clients/@client.GetId()/edit">edit</a> / <a href="/clients/@client.GetId()/delete">delete</a>
      </li>
    </ul>
  }

  <br>
  <p><a href="/clients/delete">Delete all clients</a></p>
  <hr/>
  <p><a href="/">Back Home</a></p>
</div>
