@{
  Layout = "_Layout";
}

<h1>Add a Client</h1>
<form action="/clients" method="post">
  <label for="clientName">Client's name</label>
  <input id="clientName" name="clientName" type="text">
  <br>
  <br>

<select>
  @foreach(var stylist in Model) {
    <option>
      @stylist.GetStylistName()
    </option>
  }
</select>

  <button type="submit">Add Client</button>
</form>
<p><a href="/">Back home</a></p>
<p><a href="/stylists">Back to list of Stylists.</a></p>
<p><a href="/clients">Back to list of Clients.</a></p>
