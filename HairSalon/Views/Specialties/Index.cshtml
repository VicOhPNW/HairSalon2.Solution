@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Services</h1>
  <hr/>
  @if (@Model.Count == 0)
  {
    <h3>No services have been added</h3>
  }
  @foreach (var specialty in Model)
  {
    <ul>
      <li><a href="/specialty/@specialty.GetId()">@specialty.GetService()</a> |
        <a href="/specialty/@specialty.GetId()/edit">edit</a> / <a href="/specialty/@specialty.GetId()/delete">delete</a>
      </li>
    </ul>
  }

  <hr/>
  <p><a href="/specialties/new">Add a Service</a></p>
  <p><a href="/">Main Page</a></p>
</div>
