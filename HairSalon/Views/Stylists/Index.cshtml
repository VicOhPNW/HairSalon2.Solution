@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Stylists</h1>
  <hr/>

  @if (@Model.Count == 0)
  {
    <h3>No Stylists have been added</h3>
  }
  @foreach (var stylist in Model)
  {
    <ul>
      <li>
      <a href="/stylist/@stylist.GetId()">@stylist.GetStylistName()</a>  |
      <a href="/stylists/@stylist.GetId()/update">edit</a> / <a href="/stylists/@stylist.GetId()/delete">delete</a>
      </li>
    </ul>
  }

  <br>
  <br>
  <a href="/stylists/new">Add a Stylist</a>
  <p><a href="/stylists/delete">Delete all stylists</a></p>
  <hr/>
  <p><a href="/">Back Home</a></p>
</div>
